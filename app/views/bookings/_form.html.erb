<% if user_signed_in? %>
  <%= simple_form_for [character, booking] do |f| %>
    <%= f.input :start_date, as: :string,
      input_html: {
        data: { controller: "datepicker" },
        placeholder: Date.today
        } %>
    <%= f.input :end_date, as: :string,
      input_html: {
        data: { controller: "datepicker" },
        placeholder: Date.today + 1
        } %>
    <%= f.button :submit, 'Book now !', class: 'btn btn-custom' %>
  <% end %>
<% else %>
<div class="container">
<div class="connect-box">
  <p>Wait a minute, you need an account in order to process</p>
  <%= link_to "Log in", new_user_session_path, class: "btn btn-custom" %>
</div>
</div>
<% end %>
