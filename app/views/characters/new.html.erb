    <div class="input-flex-grow"><%= f.input :name %></div>
    <div class="input-flex-grow"><%= f.input :height %></div>
    <div class="input-flex-grow"><%= f.input :eye_color %></div>
  </div>
  <div class="form-group-inline">
    <div class="input-flex-grow"><%= f.input :activity %></div>
    <div class="input-flex-grow"><%= f.input :category, collection: ["Sponge bob", "Star Wars", "The Lord of the Rings", "The Legend of Zelda", "Dune", "Frozen", "Bleach", "The Witcher", "Game of Thrones", "Metroid", "Red Dead Redemption", "Death Note", "DC Comics", "Arthurian Legends", "Knight Rider", "The Big Lebowski", "Dora the Explorer", "South Park", "Ice Age", "Breaking Bad", "Alien", "Dungeons & Dragons", "Buffy the Vampire Slayer", "The Fifth Element", "Peppa Pig", "Mr. Bean", "Beetlejuice", "How I Met Your Mother", "Dexter", "Super Mario", "Final Fantasy VII", "The Lion King", "The Smurfs", "PokÃ©mon", "Sherlock Holmes", "Guardians of the Galaxy", "Peter Pan", "Sonic"].sort%></div>
  </div>
