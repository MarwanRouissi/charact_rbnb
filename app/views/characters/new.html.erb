    <div class="input-flex-grow"><%= f.input :skill_1 %></div>
    <div class="input-flex-grow"><%= f.input :skill_2 %></div>
    <div class="input-flex-grow"><%= f.input :best_friend %></div>
  </div>
  <div class="form-group-inline">
    <div class="input-flex-grow"><%= f.input :loves_most_1 %></div>
    <div class="input-flex-grow"><%= f.input :loves_most_2 %></div>
    <div class="input-flex-grow"><%= f.input :loves_most_3 %></div>
