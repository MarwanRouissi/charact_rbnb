<div class="banner" style='background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url("<%= asset_path(@character.category+".jpg") %>");'></div>
<div class="container my-4">
  <div class="row">
      <!-- Character Details -->
      <div class="col-md-8">
          <div class="card p-4 py-5">
              <div class="d-flex align-items-center mb-3 justify-content-around">
                  <% if @character.photo.attached? %>
                    <%= cl_image_tag @character.photo.key, height: 200, width: 298, crop: :fill %>
                  <% elsif @character.url_image != nil %>
                    <%= image_tag @character.url_image, height: 200, width: 298 %>
                  <% else %>
                    <%= image_tag "image.png", height: 200, width: 298 %>
                  <% end %>
                  <div>
                      <h1 class="custom-text"><%= @character.name %></h1>
                      <p class="fst-italic"><%= @character.wtf_phrase %></p>
                      <p><strong>Height:</strong> <%= @character.height %> | <strong>Eye Color:</strong> <%= @character.eye_color %> </p>
                  </div>
              </div>
              <p><%= @character.larger_description %></p>

              <!-- He loves & Skills -->
              <div class="row">
                  <div class="col-md-6">
                      <h3 class="section-header">Loves ‚ù§Ô∏è</h3>
                      <ul class="list-group">
                          <li class="list-group-item"><%= @character.loves_most_1 %></li>
                          <li class="list-group-item"><%= @character.loves_most_2 %></li>
                          <li class="list-group-item"><%= @character.loves_most_3 %></li>
                      </ul>
                  </div>
                  <div class="col-md-6">
                      <h3 class="section-header">Skills üî•</h3>
                      <ul class="list-group">
                          <li class="list-group-item"><%= @character.skill_1 %></li>
                          <li class="list-group-item"><%= @character.skill_2 %></li>
                          <li class="list-group-item"><%= @character.skill_3 %></li>
                      </ul>
                  </div>
              </div>

              <!-- Signature Activity & Best Friend -->
              <div class="row mt-3">
                  <div class="col-md-6">
                      <h3 class="section-header">Signature Activity üßò</h3>
                      <div class="category-box"><%= @character.activity %></div>
                  </div>
                  <div class="col-md-6">
                      <h3 class="section-header">Best Friend üë•</h3>
                      <div class="category-box"><%= @character.best_friend %></div>
                  </div>
              </div>
          </div>
      </div>

<!-- Booking Sidebar -->
    <div class="col-md-4">
      <div class="card p-3">
          <div class="text-center">
            <span class="price"><%= @character.price == @character.price.to_i ? @character.price.to_i : @character.price%> <i class="fa-solid fa-coins"></i> / day</span>
            <p class="text-muted"><%= @character.price_comment %></p>
          </div>

          <div class="d-flex justify-content-between mb-3">
            <%= render 'bookings/form', character: @character, booking: @booking%>
          </div>

          <p class="text-muted text-center mt-2 border-top pt-3">You‚Äôll be charged only on confirmation<br>... well i guess ü§î</p>

          <%# <div class="total-section d-flex justify-content-between border-top pt-3">
            <span>Total</span>
            <span>1 232 ‚Ç¨</span>
          </div> %>
    </div>
    </div>
  </div>
</div>
