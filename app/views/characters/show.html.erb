<div class="banner" style='background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url("<%= asset_path(@character.category) %>");'>
  <div class="container">
    <div class="d-flex mx-3">
      <div class="mx-1 border border-dark ml-auto">
      <% if @character.photo.attached? %>
        <%= cl_image_tag @character.photo.key, height: 200, width: 298, crop: :fill %>
      <% elsif @character.url_image != nil %>
        <%= image_tag @character.url_image, height: 200, width: 298 %>
      <% else %>
        <%= image_tag "image.png", height: 200, width: 298 %>
      <% end %>
      </div>
      <div class="mx-2">
        <h1 class="py-3"><%= @character.name %></h1>
        <p class="align-text-bottom">
          <i class="fa-solid fa-quote-left"></i>
          <%= @character.wtf_phrase %>
          <i class="fa-solid fa-quote-right"></i>
        </p>
      </div>
    </div>
  </div>
</div>
<div class="d-flex justify-content-between my-2">
  <div class="col-9 text-center">
    <p><%= @character.activity %></p>
    <p><%= @character.description %></p>
  </div>
  <div data-controller="update-total" class="border border-dark col-2 mx-3 rounded-3 p-2">
    <div>
      <h3 class="text-center">Book it now!</h3>
      <p><strong data-update-total-target="price"><%= @character.price %></strong> <i class="fa-solid fa-coins"></i> per day</p>
      <div data-update-total-target="form" class="d-flex">
        <%= render 'bookings/form', character: @character, booking: @booking%>
      </div>
    </div>
    <%# <div class="my-3 border-top pt-3">
      <p>Total</p>
    </div> %>
  </div>
</div>
