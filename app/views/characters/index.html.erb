<div class="container row row-cols-1 row-cols-md-3 g-4 mx-auto mt-5">
  <% @characters.each do |character| %>
    <div class="col">
      <div class="card" style="width: 300px; height: 390px;">
        <div class="card-img-top"><%= cl_image_tag character.photo.key, height: 225, width: 298, crop: :fill if character.photo.attached?%></div>
        <div class="card-body">
          <h5 class="card-title"><%= character.name %></h5>
          <p class="card-text"><%= character.description %></p>
          <%= link_to "See more", character%>
        </div>
      </div>
    </div>
  <% end %>
</div>
